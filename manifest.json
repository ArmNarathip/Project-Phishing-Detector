{
  "name": "Phishing Mail Detector",
  "description": "Scan webmail (Gmail/Outlook) for phishing indicators + VirusTotal URL check.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Phishing Mail Detector 1.0",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "https://outlook.live.com/*",
    "https://www.virustotal.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*",
        "https://outlook.live.com/*"
      ],
      "js": [
        "src/storage.js",
        "src/rules.js",
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}